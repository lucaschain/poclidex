{
  "name": "poclidex",
  "version": "0.0.1",
  "description": "Interactive CLI Pokedex with fuzzy search, ASCII art sprites, and evolution chains",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "pokedex": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "watch": "tsc --watch",
    "debug-colors": "tsc && node dist/index.js --debug-colors",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "pokemon",
    "pokedex",
    "cli",
    "terminal",
    "ascii"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "blessed": "^0.1.81",
    "fuzzysort": "^3.1.0",
    "pokedex-promise-v2": "^4.2.1"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.9",
    "typescript": "^5.9.3",
    "vitest": "^4.0.9"
  }
}
